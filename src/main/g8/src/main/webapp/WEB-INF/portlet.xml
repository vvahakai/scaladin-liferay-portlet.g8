<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<portlet-app
        xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        version="2.0"
        xsi:schemaLocation=
                "http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
     http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

    <portlet>
        <portlet-name>Portlet Test portlet</portlet-name>
        <display-name>Scaladin 7 Portlet Test</display-name>

        <!-- Map portlet to a servlet. -->
        <portlet-class>
            vaadin.scala.ScaladinPortlet
        </portlet-class>
        <init-param>
            <name>ScaladinUI</name>
            <!-- The application class with package name. -->
            <value>com.arcusys.scaladinboten.ScaladinBotenUI</value>
        </init-param>

        <!-- Supported portlet modes and content types. -->
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>

        <!-- Not always required but Liferay requires these. -->
        <portlet-info>
            <title>Scaladin 7 Portlet Test</title>
            <short-title>Scaladin 7 Test</short-title>
        </portlet-info>
    </portlet>
</portlet-app>